---
import Layout from "../layouts/Layout.astro";
import Banner from "../components/BannerIsland.astro"
import OnClick from "../components/OnClickElement.astro"

const pageTitle = "Kirati Kiviniemi";

---

<Layout pageTitle={pageTitle}>
    <div class="intro--layout typography typography--intro">
        <p class="intro__thesis">
            <strong><a href="/about/">Kirati Kiviniemi</a></strong> is a full-stack developer <span class="punctuation">;</span>
            
            Always building software with
            <a href="javascript:void(0)">modularity</a><span class="punctuation">,</span>
            <a href="javascript:void(0)">efficiency</a><span class="punctuation">,</span> and
            <a href="javascript:void(0)">readability</a> in mind.
        </p>
        <p>
            Here's a treat for showing up!
        </p>
    </div>
    <div class="showcase typography typography--main prevent-select">
        <!-- Placeholder for a future project showcase -->
         <h2>Check Again Later</h2>
         <h3>... there's sure to be something interesting. :)</h3>
    </div>
</Layout>

<style lang="scss">
    .typography {

        &--intro {
            font-size: var(--step-5);
            line-height: var(--line-height-display);

            p {
                font-family: "Mondwest";
            };

            strong {
                color: var(--black);
                font-family: "Unnamed Font Copy";
            };
        };
        
        &--showcase {
            h2 {
                font-size: var(--step-5);
                font-family: "Unnamed Font Copy";
            };
        };
    };

    .intro {
        &--layout {
            display: flex;
            flex-direction: column;
            gap: var(--space-s);
        };

        &__thesis {

        };
    };
    

    .showcase {
        display: flex;
        flex-direction: column;
        background-color: var(--sky);
        border-radius: var(--radius-l);
        align-items: center;
        justify-content: center;
        padding: var(--space-xl) var(--space-l);
    };
</style>